generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model job_application {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  cover_letter String
  date         DateTime   @default(now())
  cv           String?
  job          job        @relation(fields: [jobId], references: [id])
  jobId        String     @db.ObjectId
  job_seekerid String     @db.ObjectId
  job_seeker   job_seeker @relation(fields: [job_seekerid], references: [id])
}

model job_seeker {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  email           String            @unique()
  names           String
  id_number       Int?
  location        String?
  phone_number    String?
  qualification   Qualification[]
  course          String[]
  experience      Int?
  cv              String?
  photo           String?
  gender          Gender?
  certification   String[]
  application     String?
  jobApplications job_application[]
}

model employer {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  email       String
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  email       String @unique
  description String?
  location    String?
  job         job[]
}

model job {
  id                  String            @id @default(auto()) @map("_id") @db.ObjectId
  title               String
  description         String            @db.String
  salary_compensation String?
  location            String?
  organization        String?
  role                String?
  status              JobStatus         @default(VACANT)
  job_type            JobType?
  vacancies           Int?
  job_application     job_application[]
  employerId          String @db.ObjectId
  employer            employer  @relation(fields: [employerId], references: [id])
}

enum Qualification {
  MASTERS
  DEGREE
  CERTICATE
  DIPLOMA
}

enum JobStatus {
  VACANT
  FILLED
}

enum JobType {
  CONTRACT
  FULLTIME
  PARTTIME
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
